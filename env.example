# Environment Variables Configuration
# Create a .env file with these variables before deployment

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_password_here
MONGO_URI=mongodb://admin:secure_password_here@mongodb:27017/aiblog?authSource=admin

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# API and Client URLs
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_EMAIL=noreply@aiexpertguide.com
SMTP_PASSWORD=your_email_password_here
FROM_EMAIL=noreply@aiexpertguide.com
FROM_NAME=AI Expert Guide

# Node Environment
NODE_ENV=production
PORT=5000
